<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">


    <servlet>
        <servlet-name>ServletRegister</servlet-name>
        <servlet-class>servlets.ServletRegister</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletRegister</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.ServletLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ServletProfile</servlet-name>
        <servlet-class>servlets.ServletProfile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletProfile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletMain</servlet-name>
        <servlet-class>servlets.ServletMain</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletMain</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletNews</servlet-name>
        <servlet-class>servlets.ServletNews</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletNews</servlet-name>
        <url-pattern>/news</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ServletHelp</servlet-name>
        <servlet-class>servlets.ServletHelp</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletHelp</servlet-name>
        <url-pattern>/help</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServletUsers</servlet-name>
        <servlet-class>servlets.ServletUsers</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletUsers</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ServletPost</servlet-name>
        <servlet-class>servlets.ServletPosts</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletPost</servlet-name>
        <url-pattern>/post</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletPostCreate</servlet-name>
        <servlet-class>servlets.ServletPostCreate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletPostCreate</servlet-name>
        <url-pattern>/post/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ServletAboutUser</servlet-name>
        <servlet-class>servlets.ServletPostCreate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletAboutUser</servlet-name>
        <url-pattern>/profile/aboutUser</url-pattern>
    </servlet-mapping>
</web-app>